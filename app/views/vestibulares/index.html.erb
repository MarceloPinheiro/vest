<%- model_class = Vestibulare -%>
<div class="page-header">
  <h1><%=t 'Vestibulares', :default => model_class.model_name.human.pluralize %></h1>
</div>

<%= link_to t('Novo', :default => t("helpers.links.new")),
            new_vestibulare_path,
            :class => 'btn btn-default' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:descricao) %></th>
      <th><%= model_class.human_attribute_name(:inicio) %></th>
      <th><%= model_class.human_attribute_name(:fim) %></th>
      <th><%= model_class.human_attribute_name(:prazoboleto) %></th>
      <th><%= model_class.human_attribute_name(:prova) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @vestibulares.each do |vestibulare| %>
      <tr>
        <td><%= link_to vestibulare.id, vestibulare_path(vestibulare) %></td>
        <td><%= vestibulare.descricao %></td>
        <td><%= vestibulare.inicio %></td>
        <td><%= vestibulare.fim %></td>
        <td><%= vestibulare.prazoboleto %></td>
        <td><%= vestibulare.prova %></td>
        <td><%= vestibulare.status %></td>
        <td><%=l vestibulare.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_vestibulare_path(vestibulare), :class => 'btn btn-primary btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      vestibulare_path(vestibulare),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


